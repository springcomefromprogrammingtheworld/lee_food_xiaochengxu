/* 购物车列表  */
.placeOrder_cart_mask{
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.5); 
  position: fixed;
  top: 0;
  right: 0;
  z-index: 1001;
}
.placeOrder_cart_content{
  position: fixed;
  left: 0px;
  bottom: 118rpx;
  background-color: #fff;
  width: 100%;
  z-index: 1003;
  max-height: 70%;
  overflow: hidden;
}
.placeOrder_productCategory .category{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 0px 13px 0px 13px;
  border-bottom: 1px solid #e2e2e2;
}
.placeOrder_productCategory .productItem .productCart_img{
  width: 60px;
}
.placeOrder_productCategory .productItem .productCart{
  height: 60px;
}
.placeOrder_productCategory .cartHeight{
  position: relative;
  max-height: 300px;
  overflow: scroll;
}
.placeOrder_productCategory .cartBr{
  height: 1px;
  margin: 0px 13px 0px 13px;
  border-bottom: 1px solid #e2e2e2;
}
.placeOrder_productCategory .categoryNames {
  color: #333;
  font-size: 14px;
  display: inline-block;
  width: 50%;
  text-align: left;
  margin: 13px 0 13px 0;
}
.placeOrder_productCategory .emptyCart {
  color: #6e6c6c;
  font-size: 14px;
  cursor: pointer;
  display: inline-block;
  width: 50%;
  text-align: right;
  margin: 13px 0 13px 0;
}